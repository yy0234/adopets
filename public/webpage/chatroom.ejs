
<link rel="stylesheet" type="text/css" href="/stylesheets/pages/chat.css"/>

<div class="container-fluid">
    <!--Your own content-->
    <div class="container" id="nickname-container">
        <h1>Choose a nickname!</h1>
        <span id="nick-error"></span>
        <form id="choose-nickname">
            <input type="text" id="nickname"></input>
        </form>
    </div>

    <div class="container" id="chat-container">
        <div class="row">
            <div id="users" class="col-md-4">
                <h2>Users</h2>
            </div>
            <div class="clearfix visible-xs"></div>
            <div class="col-md-4" id="chat-col">
                <div class="row" id="room"><h2>Lobby</h2></div>
                <div class="row" id="chat">

                </div>
                <div class="row">
                    <form id="send-message">
                        <input type="text" id="new-message" autocomplete="off"></input>
                    </form>
                </div>
            </div>
            <div class="col-md-4" id="pm-col">
                <div class="row" id="user-to-pm"><h2>Smitha</h2></div>
                <div class="row" id="private-chat">

                </div>
                <div class="row">
                    <form id="send-pm">
                        <input type="text" id="new-pm" autocomplete="off"></input>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/socket.io/socket.io.js"></script>
<script src="/javascript/chat.js"></script>