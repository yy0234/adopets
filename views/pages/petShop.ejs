<!DOCTYPE html>
<html>
<head>
	<% include ../partials/header.ejs %>
	<!--Your own css file-->
	<title>Pet Supplies Shop</title>
</head>

<body>
<% include ../partials/headline.ejs %>

<section class="main-content">
	<div class="container-fluid">
	<!--Your own content-->
	<div class="shop">
		<div class="row">
			<div class="col-md-2" id="filter_button">
				<a id="show_hide_button">
					<div class="filter_hide_button"><i class="fa fa-caret-left"></i>&nbsp;Hide</div>
					<div class="filter_show_button"><i class="fa fa-caret-right"></i>&nbsp;Show</div>
					&nbsp;Filter
				</a>
			</div>
			<div class="col-md-5" id="items_count">
				<!--SERVER-->
				<div><span class="item_number" id="first_item_number">1</span>&nbsp;-&nbsp;<span class="item_number" id="last_item_number">60</span>&nbsp;of&nbsp;<span class="item_number" id="total_item_number">500</span>&nbsp;items</div>
			</div>
			<div class="col-md-1" id="display_size">
				<div>View:&nbsp;<a class="fa fa-th-large" id="less_icon"></a>&nbsp;&nbsp;<a class="fa fa-th" id="more_icon"></a></div>
			</div>
			<div class="col-md-4">

			</div>
		</div>
		<div class="row">
			<div class="col-md-3" id="left_container">
				<div class="search-container">
					<form id="searchBar">
						<input type="text" placeholder="Search.." name="search"/><button type="submit"><i class="fa fa-search"></i></button>
					</form>
				</div>
				<div class="filtering">
					<div class="category">
						<label class="category_text">CATEGORY</label>
						<br>
						<br>
						<div class="filter_list">
							<!--<div class=""-->
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>


<% include ../partials/script.ejs %>

<!--Your own script-->
<script src="/javascript/jquery.js"></script>
<script>
	$(function(){
		$("#show_hide_button").click(function(){
			$("#left_container").hide();
			$(".filter_hide_button").hide();
			$(".filter_show_button").show();
		});
		$("#show_hide_button").click(function(){
			$("#left_container").show();
			$(".filter_hide_button").show();
			$(".filter_show_button").hide();
		});
		$("#more_icon").click(function(){
			$("#more_icon").css({
				'opacity': '1.0',
				'pointer-events': 'none',
				'cursor': 'default'
			});
			$("#less_icon").css({
				'opacity': '0.5',
				'pointer-events': 'auto',
				'cursor': 'pointer'
			});
		});
		$("#less_icon").click(function(){
			$("#less_icon").css({
				'opacity': '1.0',
				'pointer-events': 'none',
				'cursor': 'default'
			});
			$("#more_icon").css({
				'opacity': '0.5',
				'pointer-events': 'auto',
				'cursor': 'pointer'
			});
		});
	});
</script>


</body>
</html>